{% extends 'admin/dashboard.html.twig' %}

{% block contenu %}

<section>
    <div class="container">
        <form class="mt-3" action="?controller=articles&action=update" method="post">
        {% for info in restauration %}
            <textarea name="contenu" id="contenu">{{ info.contenu }}</textarea>
            <input type="hidden" name="id_article" value="{{ info.id_article }}">
            <input type="hidden" name="id_categorie" value="{{ info.id_categorie }}">
        {% endfor %}
        <button type="submit" class="col offset-md-1 btn btn-warning mt-3 mb-5">Modifier</button>
        </form>
    </div>
</section>

{% endblock %}

{% block scripts %}
<script>
    tinymce.init({
        selector: '#contenu',
        skin: 'oxide-dark',
        content_css: 'dark',
        height: 500,
        language: "fr_FR",
        menubar: false,
        toolbar: 'undo redo |' +
        'bold italic backcolor | alignleft aligncenter ' +
        'alignright alignjustify',
        content_style: 'body { font-family:Helvetica,Arial,sans-serif; font-size:14px }',
    });

</script>
{% endblock %}